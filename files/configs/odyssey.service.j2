[Unit]
Description=Odyssey Connection Pooler
Documentation=https://github.com/yandex/odyssey
After=network.target

[Service]
Type=simple
User=postgres
ExecStart=/usr/local/bin/odyssey /etc/odyssey/odyssey.conf
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
LimitNOFILE=20000
LimitNOFILESoft=20000

[Install]
WantedBy=multi-user.target